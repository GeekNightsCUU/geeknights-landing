gray_ = #ecf0f1
red_ = #e74c46


body
	background-color red_
	padding 0 
	margin 0 
	font-size 16px
	min-width 320px
	h1
		display none
	img
		display inline-block
		vertical-align top
		padding 0 
		margin 0 
		width 100%
	h3,h2
		color #303030
		font-family 'Nunito'
	a 
		text-decoration none
	ul
		list-style-type none
		li 
			display inline-block


header
	text-align center
	width 100%
	img
		width 450px
.txt_container
	background-color gray_
	img 
		width 90px
section
	width 100%
	article
		margin 3em 0em
	#banner_1
		background-color gray_
		border-top-right-radius 30px
		border-bottom-right-radius 30px
		width 75%
		#b1_img
			position relative
			width 420px
			height auto
		#b1_txt
			text-align center
			margin 2em  
			width 45%
			#buy_buttons
				margin 0 
				padding 0 
				width 100%
				li 
					display inline-block
					vertical-align middle
					padding 0
					margin 0.2em
		#ios_img,#playstore_img
			width 150px
	.banner_1,#b1_img,#b1_txt,#buy_buttons
		display inline-block
		vertical-align top

#banner_2
	text-align center
	background-color rgba(200, 200, 200, .10)
	padding 1em 0
	width 100%
	#b2_txt,#screen_1,h2,#map_img,h3
		display inline-block
	#b2_txt,#screen_1
		margin 0 2em
	#b2_txt
		border-radius 1em
		margin 7em 7em 7em 0em
		padding 0 0.5em 1.3em 0.5em  
		text-align center
		width 35%
		h2
			font-family Nunito
			font-weight bold
			text-align center
			width 100%
		#map_img
			margin -1em 0.2em 0 0.2em 
			vertical-align top
			padding 0.7em 0 
			width 90px
		h3
			margin -1em 0.5em 0 0
			padding 0.7em 0 
			width 70%
	#screen_1
		width 419px

#banner_3
	text-align center
	background-color rgba(200, 200, 200, .10)
	padding 1em 0
	margin-top -5em
	width 100%
	#b3_txt 
		display inline-block
		border-radius 1em
		margin 7em 0em 7em 6em
		padding 0.3em 1em 1.3em 1em  
		text-align center
		width 35%
		#map_img,h3
			display inline-block
		h2
			font-family Nunito
			font-weight bold
			text-align center
			width 100%
		h3
			margin -1em 0.5em 0 0
			padding 0.7em 0 
			width 70%
	#screen_2
		margin 0 
		padding 0 
		width 270px

.article_bans
	margin-top 8em

.magbutton
	h2 
		font-size 1em
		padding 0   
		margin 0 

//feedback banner
#feedback_banner
	margin 8em 0 
	padding 0 
	text-align center
	background-color none
	width 100%
	h2,h3,img,a,#feedback_txt,#feedback_banner,#social_container
		display inline-block
	h2
		width 100%
	#feedback_txt
		border-radius 1em
		padding 1em 
		width 55%
	a 
		color #26C69F
		text-decoration none
	a:hover
		text-decoration underline
	#social_container
		width 100%
		padding 0 
		margin 0 
		li 
			margin 0 1em
			opacity .8
		li:hover
			opacity 1

//about article
#about_article
	background-color rgba(250, 250, 250, .25)
	margin 4em 0 
	padding 0 
	text-align center
#about_banner
	display inline-block
	padding 0 
	margin 2em 
	width 55%
	#about_txt
		border-radius 1em
		padding 1em 
		width 100%
		h2,img,h3,a
			display inline-block
		h2 
			text-align center
			width 100%
		img 
			opacity 0.75
			margin-top 2em
			width 200px
		img:hover
			opacity 1
		h3 
			width 100%
			a 
				text-decoration none
				color #26C67F
			a:hover
				text-decoration underline
				color #26C69F

//credits article
#credits_article
	border solid 0.2em black
	margin-top -5em 
	padding 0.5em 
	background gray_
	width 100%
	#credits_txt
		text-align center
		h2
			width 100%
		//h3
	.creators_item
		text-align center
		margin 0 
		padding 0 
		width 100%
		li 
			margin 0 0em 
			padding 0 
			display inline-block
			width 150px
			h4
					color #26C69F
			a 
				display inline-block
				
				.avatar_img
					border solid 0.15em black
					border-radius 1em
					width 100px
					opacity .8
				.avatar_img:hover
					opacity 1
					


@import "chart_conf.styl"
@import "responsive.styl"
			

	

